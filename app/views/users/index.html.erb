<p id="notice"><%= notice %></p>

<h1>Users</h1>


<%= form_tag do %>
  <table>
    <thead>
    <tr>
      <th>email</th>
      <th>is_admin</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= check_box_tag :is_admin, user.email, user.is_admin %></td>
          </tr>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag %>
<% end %>